{
	"ts-node": {
		"files": true,
	},
	"compilerOptions": {
		// Output
		"target": "es2017",
		"module": "commonjs",
		"declaration": true,
		"inlineSources": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"removeComments": true,
		"resolveJsonModule": true,

		// Development
		"lib": [
			"es5",
		],
		"strict": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
	},
}
